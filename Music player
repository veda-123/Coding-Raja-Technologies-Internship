<script>
    $(document).ready(function() {
        // Define playlist array to store user's selected tracks
        var playlist = [];

        // Event listener for adding a track to the playlist
        $('.addToPlaylist').on('click', function() {
            var title = $(this).data('title');
            var artist = $(this).data('artist');
            var audioSrc = $(this).data('audio');
            var coverSrc = $(this).data('cover');
            var track = { title: title, artist: artist, audioSrc: audioSrc, coverSrc: coverSrc };
            
            // Check if the track is already in the playlist
            var existsInPlaylist = playlist.some(function(item) {
                return item.audioSrc === track.audioSrc;
            });

            // If the track is not already in the playlist, add it
            if (!existsInPlaylist) {
                playlist.push(track);
                updatePlaylist();
            }
        });

        // Function to update the playlist display
        function updatePlaylist() {
            $('#playlist').empty(); // Clear existing playlist
            // Append each track to the playlist display
            playlist.forEach(function(track, index) {
                var listItem = $('<div class="track"><img src="' + track.coverSrc + '" alt="Album Cover"><div><h4>' + track.title + '</h4><p>' + track.artist + '</p></div></div>');
                $('#playlist').append(listItem);
            });
        }
    });
</script>
<script>
    $(document).ready(function() {
        // Define playlist and current track index
        var playlist = [
            { title: "shape of you", artist: "ed sheeran", audioSrc: "song1.mp3", coverSrc: "album1.jpg" },
            { title: "adigaa", artist: "karthik", audioSrc: "song2.mp3", coverSrc: "album2.jpg" },
            { title: "Nuv unte na jathaga", artist: "AR Rehman", audioSrc: "song3.mp3", coverSrc: "album3.jpg" },
            { title: "hi nanna", artist: "karthik", audioSrc: "song4.mp3", coverSrc: "album4.jpg" },
            { title: "ORANGE", artist: "karthik", audioSrc: "song5.mp3", coverSrc: "album5.jpg" },
            // Add more tracks as needed

        ];
        var currentTrackIndex = 0;
        var audioPlayer = $('#audioPlayer')[0];

        // Function to update audio player with current track
        function updateAudioPlayer() {
            var currentTrack = playlist[currentTrackIndex];
            $('#audioPlayer').attr('src', currentTrack.audioSrc);
            $('#audioPlayer').attr('title', currentTrack.title + ' - ' + currentTrack.artist);
            // Update album cover and track info
            // Implement this part based on your design
        }

        // Function to play/pause audio
        $('#playPauseBtn').on('click', function() {
            if (audioPlayer.paused) {
                audioPlayer.play();
                $(this).text('Pause');
            } else {
                audioPlayer.pause();
                $(this).text('Play');
            }
        });

        // Function to play next track
        $('#nextBtn').on('click', function() {
            currentTrackIndex = (currentTrackIndex + 1) % playlist.length;
            updateAudioPlayer();
            audioPlayer.play();
            $('#playPauseBtn').text('Pause');
        });

        // Function to play previous track
        $('#previousBtn').on('click', function() {
            currentTrackIndex = (currentTrackIndex - 1 + playlist.length) % playlist.length;
            updateAudioPlayer();
            audioPlayer.play();
            $('#playPauseBtn').text('Pause');
        });

        // Event listener for audio time update
        audioPlayer.addEventListener('timeupdate', function() {
            // Update progress bar
            var currentTime = audioPlayer.currentTime;
            var duration = audioPlayer.duration;
            var progress = (currentTime / duration) * 100;
            $('#progressBar').attr('value', progress);
        });

        // Function to shuffle playlist
        $('#shuffleBtn').on('click', function() {
            playlist.sort(function() { return 0.5 - Math.random() });
            updateAudioPlayer();
            audioPlayer.play();
            $('#playPauseBtn').text('Pause');
        });

        // Function to toggle repeat mode
        var repeatMode = false;
        $('#repeatBtn').on('click', function() {
            repeatMode = !repeatMode;
            $(this).toggleClass('active', repeatMode);
        });

        // Function to handle end of audio playback
        audioPlayer.addEventListener('ended', function() {
            if (repeatMode) {
                audioPlayer.currentTime = 0;
                audioPlayer.play();
            } else {
                currentTrackIndex = (currentTrackIndex + 1) % playlist.length;
                updateAudioPlayer();
                audioPlayer.play();
            }
        });

        // Initialize audio player with first track
        updateAudioPlayer();
    });
</script>


